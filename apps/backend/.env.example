# Airwallex Configuration
# Leave empty to use dummy API (no authentication required)
AIRWALLEX_CLIENT_ID=
AIRWALLEX_API_KEY=
AIRWALLEX_ENV=sandbox
AIRWALLEX_API_BASE_URL=https://demo-pacheckoutdemo.airwallex.com

# Quaderno (tax calculation). If QUADERNO_API_KEY is empty, a flat 10% fallback is used.
QUADERNO_API_KEY=
QUADERNO_API_BASE_URL=https://sandbox-quadernoapp.com
QUADERNO_FROM_COUNTRY=US
QUADERNO_FROM_POSTAL_CODE=10001

# Application Configuration
FRONTEND_BASE_URL=http://localhost:3000
WEBHOOK_URL=http://localhost:3001/webhooks/airwallex
PORT=3001

# Webhook signature verification (whsec_... from Airwallex webhook settings).
AIRWALLEX_WEBHOOK_SECRET=
